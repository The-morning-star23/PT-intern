datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @id @default(autoincrement())
  mobile_number String   @unique
  profiles      Profile[]
}

model Profile {
  id      Int    @id @default(autoincrement())
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
  name    String
  age     Int
  relationship String // e.g., 'Self', 'Wife'
}